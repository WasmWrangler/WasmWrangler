<Project>
  <Target Name="WasmInjectScripts">
    <PropertyGroup>
      <_ScriptsDirectory>$(MSBuildProjectDirectory)/$(WasmScriptsDirectory)</_ScriptsDirectory>
    </PropertyGroup>

    <ItemGroup>
      <_ScriptFiles Include="
        $(MSBuildThisFileDirectory)/js/*.js;
        $(MSBuildThisFileDirectory)/js/*.d.ts" />
    </ItemGroup>

    <Copy
      SourceFiles="@(_ScriptFiles)"
      DestinationFolder="$(_ScriptsDirectory)"
      SkipUnchangedFiles="true" />
  </Target>
</Project>
