  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="$(RepositoryRootDirectory)License.txt" Visible="false" Pack="true" PackagePath="$(PackageLicenseFile)" />
    
    <!-- SharpScss needs to be packed. -->
    <!--<None Include="$(PkgSharpScss)/lib/netstandard2.0/*.*" Pack="true" PackagePath="lib/$(TargetFramework)/%(Filename)%(Extension)" />
    <None Include="$(PkgSharpScss)/runtimes/**/*.*" Pack="true" PackagePath="runtimes/%(RecursiveDir)%(Filename)%(Extension)" />-->
  </ItemGroup>

  <ItemGroup>
    <None Include="*.props" Pack="true" PackagePath="build/$(TargetFramework)/%(None.Filename)%(None.Extension)" />
    <None Include="*.targets" Pack="true" PackagePath="build/$(TargetFramework)/%(None.Filename)%(None.Extension)" />

    <None Include="$(MSBuildThisFileDirectory)../WasmWrangler.Build/*.*" Visible="false" Pack="true" PackagePath="build/$(TargetFramework)/WasmWrangler.Build/%(None.Filename)%(None.Extension)" />
  </ItemGroup>
