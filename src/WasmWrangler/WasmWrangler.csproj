<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
  </PropertyGroup>

  <!--
    NOTE: The TypeScript package is adding the JavaScript output to
    the content. This is why I'm not including it for Release builds.
  -->
  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="4.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <!-- TypeScript settings -->
  <PropertyGroup>
    <!-- Disable CompileOnSave as it just to leads to lots of confusion about what is actually running. -->
    <TypeScriptCompileOnSaveEnabled>false</TypeScriptCompileOnSaveEnabled>
    <TypeScriptTarget>ES2017</TypeScriptTarget>
  </PropertyGroup>

  <!-- Hide Items -->
  <ItemGroup>
    <None Include="build/scripts/*.js;build/scripts/*.js.map" Visible="false" />
  </ItemGroup>
  
  <!-- Pack Items -->
  <ItemGroup>
    <None Include="build/*.props" Pack="true" PackagePath="build/$(TargetFramework)/%(None.Filename)%(None.Extension)" />
    <None Include="build/*.targets" Pack="true" PackagePath="build/$(TargetFramework)/%(None.Filename)%(None.Extension)" /> 
    
    <None Include="build/scripts/*.ts" Pack="true" PackagePath="build/$(TargetFramework)/scripts/%(None.Filename)%(None.Extension)" />

    <None Include="$(MSBuildThisFileDirectory)../WasmWrangler.Build/*.*" Visible="false" Pack="true" PackagePath="build/$(TargetFramework)/WasmWrangler.Build/%(None.Filename)%(None.Extension)" />
    
    <None Include="$(RepositoryRootDirectory)License.txt" Visible="false" Pack="true" PackagePath="$(PackageLicenseFile)" />
  </ItemGroup>
</Project>

